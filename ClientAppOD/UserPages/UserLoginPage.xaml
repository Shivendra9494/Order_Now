<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ClientAppOD.UserPages.UserLoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClientAppOD"
    xmlns:subpages="clr-namespace:ClientAppOD.SubPages"
    BackgroundColor="#F6F6F6"
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="Nunito-ExtraLight" />

            </Style>
            <Style TargetType="Editor">
                <Setter Property="FontFamily" Value="Nunito-ExtraLight" />

            </Style>
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="Nunito-ExtraLight" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Frame
            Grid.Row="0"
            Padding="0"
            BackgroundColor="White"
            HasShadow="True"
            HeightRequest="60"
            HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Horizontal" Spacing="0">
                <ImageButton
                    x:Name="tool"
                    Margin="-5,0,0,0"
                    BackgroundColor="Transparent"
                    Clicked="btnCancelClicked"
                    HeightRequest="20"
                    HorizontalOptions="Start"
                    Source="backleft"
                    WidthRequest="20" />
                <Label
                    Margin="50,0,0,0"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="StartAndExpand"
                    Text="Log in"
                    TextColor="#2E3032" />
            </StackLayout>
        </Frame>


        <ScrollView Grid.Row="1">


            <StackLayout
                x:Name="stackMain"
                Padding="15"
                Spacing="0">
                <Frame
                    x:Name="FrameFacebook"
                    Margin="0"
                    Padding="0"
                    BackgroundColor="#236adb"
                    CornerRadius="3"
                    HasShadow="False"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    IsVisible="true"
                    WidthRequest="416">
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal"
                        Spacing="0">
                        <Image HeightRequest="40" Source="facebook.png" />
                        <StackLayout
                            Margin="-10,0,0,0"
                            Orientation="Vertical"
                            Spacing="0">
                            <Label
                                FontAttributes="None"
                                FontSize="14"
                                HorizontalOptions="StartAndExpand"
                                HorizontalTextAlignment="Start"
                                Text="Continue with Facebook"
                                TextColor="#F6F6F6"
                                VerticalTextAlignment="Start" />
                            <Label
                                FontAttributes="None"
                                FontSize="14"
                                HorizontalOptions="StartAndExpand"
                                HorizontalTextAlignment="Start"
                                Text="We won't post anything without asking!"
                                TextColor="#F6F6F6"
                                VerticalTextAlignment="Start" />
                        </StackLayout>
                    </StackLayout>
                </Frame>
                <!--<local:FacebookLoginButton
                Margin="20,10"
                HeightRequest="50"
                HorizontalOptions="CenterAndExpand"
                WidthRequest="416" />-->




                <!--<StackLayout
                    BackgroundColor="#F6F6F6"
                    HeightRequest="30"
                    VerticalOptions="CenterAndExpand">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4.5*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="4.5*" />
