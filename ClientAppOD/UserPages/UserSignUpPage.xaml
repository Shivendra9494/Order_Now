                    </Grid>
                </StackLayout>-->
                <StackLayout Margin="20,0,20,0" Orientation="Horizontal">
                    <BoxView
                        HeightRequest="0.5"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Center"
                        Color="DarkGray" />
                    <Label
                        HorizontalOptions="CenterAndExpand"
                        Text="Or"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand" />
                    <BoxView
                        HeightRequest="0.5"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Center"
                        Color="DarkGray" />
                </StackLayout>
                <StackLayout
                    Margin="-15,0"
                    Padding="0"
                    Spacing="0">
                    <StackLayout
                        Padding="30,12,10,12"
                        BackgroundColor="#F6F6F6"
                        Orientation="Vertical">
                        <Label
                            FontSize="13"
                            HorizontalOptions="Start"
                            HorizontalTextAlignment="Start"
                            Text="Name"
                            TextColor="Black"
                            WidthRequest="100" />
                        <Entry
                            x:Name="entryName"
                            FontSize="13"
                            HorizontalOptions="FillAndExpand"
                            HorizontalTextAlignment="Start"
                            Placeholder="name"
                            TextColor="Black" />
                        <Label
                            x:Name="lblError0"
                            FontSize="13"
                            HorizontalOptions="StartAndExpand"
                            IsVisible="false"
                            Text=""
                            TextColor="Brown" />
                    </StackLayout>
                    <StackLayout
                        Padding="30,12,0,12"
                        BackgroundColor="#F6F6F6"
                        Orientation="Vertical">
                        <Label
                            FontSize="13"
                            HorizontalOptions="Start"
                            HorizontalTextAlignment="Start"
                            Text="Email"
                            TextColor="Black"
                            WidthRequest="100" />
                        <Entry
                            x:Name="entryEmail"
                            FontSize="13"
                            HorizontalOptions="FillAndExpand"
                            HorizontalTextAlignment="Start"
                            Keyboard="Email"
                            Placeholder="name@example.com"
                            TextColor="Black" />
                        <Label
                            x:Name="lblError1"
                            FontSize="13"
                            HorizontalOptions="StartAndExpand"
                            IsVisible="false"
                            Text=""
                            TextColor="Brown" />
                    </StackLayout>

                    <StackLayout
                        Padding="30,12,0,12"
                        BackgroundColor="#F6F6F6"
                        Orientation="Vertical">
                        <Label
                            FontSize="13"
                            HorizontalOptions="Start"
                            HorizontalTextAlignment="Start"
                            Text="Password"
                            TextColor="Black"
                            WidthRequest="100" />
                        <Entry
                            x:Name="entryPassword"
                            FontSize="13"
                            HorizontalOptions="FillAndExpand"
                            HorizontalTextAlignment="Start"
                            IsPassword="True"
                            Placeholder="Password"
                            TextColor="Black" />
                        <Label
                            x:Name="lblError2"
                            FontSize="13"
                            HorizontalOptions="StartAndExpand"
                            IsVisible="false"
                            Text=""
                            TextColor="Brown" />
                    </StackLayout>
                    <!--<BoxView
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center"
                    Color="#f9f9f9" />-->
                </StackLayout>
                <Button
                    Margin="10,30,10,10"
                    BackgroundColor="#236adb"
                    Clicked="btnLoginclicked"
                    CornerRadius="2"
                    FontSize="18"
                    Text="Create account"
                    TextColor="White" />

                <!--<StackLayout Orientation="Horizontal">
                <BoxView
                    HeightRequest="0.5"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center"
                    Color="black" />
                <Label
                    FontSize="16"
                    HorizontalOptions="CenterAndExpand"
                    Text="or"
                    TextColor="#404040" />
                <BoxView
                    HeightRequest="0.5"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center"
                    Color="black" />
            </StackLayout>-->
