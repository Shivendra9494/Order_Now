                <Label
                    Margin="10,0,0,0"
                    HorizontalOptions="StartAndExpand"
                    HorizontalTextAlignment="Start"
                    Text="By logging into your account you agree to our " />
                <Label
                    x:Name="lblTerms"
                    Margin="10,0,0,0"
                    HorizontalOptions="StartAndExpand"
                    HorizontalTextAlignment="Start"
                    Text="Terms and Conditions"
                    TextColor="#236adb" />
                <StackLayout
                    Margin="10,20,0,0"
                    Padding="0"
                    HorizontalOptions="StartAndExpand"
                    Orientation="Horizontal"
                    Spacing="0">
                    <Label
                        FontSize="12"
                        HorizontalOptions="StartAndExpand"
                        Text="Please read our " />
                    <Label
                        x:Name="lblPrivacy"
                        FontSize="12"
                        HorizontalOptions="Center"
                        Text="Privacy Policy "
                        TextColor="#236adb" />
                    <Label
                        FontSize="12"
                        HorizontalOptions="Center"
                        Text="and " />
                    <Label
                        x:Name="lblCookies"
                        FontSize="12"
                        HorizontalOptions="StartAndExpand"
                        Text="Cookies Policy"
                        TextColor="#236adb" />
                </StackLayout>


            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
