<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientAppOD.OrderPages.PostCodePage"
             Title="Postcode" BackgroundColor="White">
    <StackLayout Padding="0">

        <Frame CornerRadius="0"  VerticalOptions="CenterAndExpand" Padding="0,20">
            <StackLayout Spacing="6">
                 <Label FontSize="18" Text="Postcode"  HorizontalOptions="CenterAndExpand"  HorizontalTextAlignment="Center" TextColor="Black"></Label>
                <BoxView/>
                <Entry x:Name="entryPostcode" HeightRequest="40" FontSize="20" Placeholder="enter your postcode" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Start"  TextColor="Black" ></Entry>
         <BoxView/>
                <Label Text="" x:Name="lblError1" HorizontalOptions="StartAndExpand" TextColor="#EB6361"></Label>
       
                 <Button Text="Continue" FontSize="18" BackgroundColor="#EB6361" CornerRadius="2" Margin="10" TextColor="White"></Button>
       
            </StackLayout>
        </Frame>
       
   
    </StackLayout>
       
</ContentPage>
